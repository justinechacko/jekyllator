<div class="container">
  <%= form_tag(controller: "blog", action: "create", method: "post") do %>
    <%= label_tag :title %>:<br />
    <%= text_field_tag :title %><br />

    <%= label_tag :content %>:<br />
    <%= text_area_tag :content,nil,class: "contents"%><br />
    <%= submit_tag("Submit") %>
  <% end %>

</div>
