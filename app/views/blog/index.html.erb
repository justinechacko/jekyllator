<div class="container">
  <h1>Blog-Index</h1>
  <table class="table">
    <thead>
      <tr>
        <th>
          Post
        </th>
        <th>
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% @files.each do |f| %>
         <tr>
           <td>
             <%= f.name %> <br />
           </td>
           <td>
             <%= link_to 'Show', blog_path(f["name"]) %> <br />
           </td>
           <td>
             <%= link_to 'Delete', blog_path(f["name"]), method: :delete, :data => {:confirm => "Are you sure?"}%> <br />
           </td>
           <td>
             <%= link_to 'Edit', edit_blog_path(f["name"].split(".")[0])%> <br />
           </td>

         </tr>
       <% end%>

    </tbody>
  </table>
  <p> <%= link_to 'Create', new_blog_path %></p>

</div>
