<!DOCTYPE html>
<html>
<head>
  <title>Jekllator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container container-fluid">
      <ul class="nav navbar-nav">
        <li><p class="navbar-brand" ><%= link_to 'Jekyllator', root_path %></p></li>
        <li><a href="#">About</a></li>
      </ul>
      <div class="navbar-right">
        <% unless user_signed_in? %>
          <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign In With GitHub', '/auth/github' %></buton>
        <% else %>
          <% user = current_user %>
          <p class="navbar-text">Signed in as <%= user.name%></p>
          <p class="navbar-text"><%= link_to 'Log Out', logout_path, method: :delete %></p>
        <% end %>

      </div>

    </div>
  </nav>
<%= bootstrap_flash %>
<%= yield %>

</body>
</html>
