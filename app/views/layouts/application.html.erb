<!DOCTYPE html>
<html>
<head>
  <title>Jekllator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container container-fluid">



        <% if user_signed_in? %>
          <% user = current_user %>
          <ul class="nav navbar-nav">
            <li class="nav_link"><p class="navbar-brand" ><%= link_to 'Jekyllator', root_path %></p></li>
            <li class="nav_link"><p class="navbar-text"  ><%= link_to 'About', about_path %></p></li>
          </ul>

          <div class="navbar-right">
            <p class="navbar-text">Signed in as <%= user.name%></p>
            <p class="navbar-text"><%= link_to 'Log Out', logout_path, method: :delete %></p>
          </div>

        <% end %>



    </div>
  </nav>
<%= bootstrap_flash %>
<%= yield %>

</body>
</html>
